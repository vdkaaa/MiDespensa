<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_inventory"
    android:layout_margin="12dp"
    android:backgroundTint="@color/naranja"
    card_view:cardBackgroundColor="#227C9D"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/item_image"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Producto"
            android:textColor="@color/white"
            android:id="@+id/item_title"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="24sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compra"
            android:textColor="@color/white"
            android:id="@+id/CantidadPrComprar"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/botonAumentarCompraProductos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:text="@string/AgregarP" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/white"
            android:id="@+id/CantidadProductos"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/botonDisminuirCompraProductos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:text="@string/QuitarP" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
